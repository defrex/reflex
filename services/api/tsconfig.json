{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "../",
    "paths": {
      "api/*": ["api/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  }
}

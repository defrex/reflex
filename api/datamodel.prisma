type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  email: String! @unique
  name: String!
  githubAccessToken: String
  figmaAccessToken: String
  figmaRefreshToken: String

  memberships: [Membership]!
}

enum Role {
  MEMBER
  ADMIN
}

type Membership {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  role: Role! @default(value: MEMBER)

  user: User!
  team: Team!
}

type Team {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  name: String!

  memberships: [Membership]!
  components: [Component]!
  repos: [Repo]!
}

type Component {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  name: String!

  team: Team!
  samples: [Sample]!
}

type Sample {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  name: String!

  component: Component!
  renders: [Render]!
}

type Render {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  imageUrl: String
  html: String!
  branch: String!
  commit: String!

  sample: Sample!
  check: Check
}

type Check {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  githubCheckId: Int @unique
  branch: String!
  commit: String!

  renders: [Render]!
  repo: Repo
}

type Repo {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt

  owner: String!
  name: String!

  checks: [Check]!
  team: Team
}

type CliAuthSession {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  expiresAt: DateTime!

  authenticatedUser: User
}

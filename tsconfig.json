{
  "exclude": [
    "node_modules",
    "local/*",
    "packages/*",
    "functions/*",
    "services/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["./services/api/*"],
      "ui/*": ["./services/ui/*"],
      "bin/*": ["./bin/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  }
}
